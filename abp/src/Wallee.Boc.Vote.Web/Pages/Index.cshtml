@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Wallee.Boc.Vote.Localization
@using Volo.Abp.Users
@model Wallee.Boc.Vote.Web.Pages.IndexModel
@inject IHtmlLocalizer<VoteResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">
        <div class="d-inline-block bg-success text-white p-1 h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> Congratulations, <strong>Boc.Vote</strong> is successfully running!</h5>
        </div>
        <h1>欢迎来到包头分行绩效考核系统</h1>

        <p class="lead px-lg-5 mx-lg-5">
            这里是管理端
        </p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }
    </div>
</div>
